        <Label Content="(49 &lt; Höhe &lt; 151)" Canvas.Left="181" Canvas.Top="149" Width="137" FontSize="15"/>
        <Label Content="Paddle Breite:" HorizontalAlignment="Left" VerticalAlignment="Top" Canvas.Left="41" Canvas.Top="174" FontSize="15"/>
