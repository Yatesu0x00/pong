        <CheckBox Content="Automatischer Paddle" Canvas.Left="181" Canvas.Top="64" FontSize="15" Width="177" IsChecked="True" Checked="CheckBox_Checked" Unchecked="CheckBox_Unchecked"/>
        <Label Content="Paddle Geschwindigkeit:" HorizontalAlignment="Left" VerticalAlignment="Top" Canvas.Left="41" Canvas.Top="200" FontSize="15"/>
        <TextBox x:Name="tbPaddleVy" HorizontalAlignment="Left" Height="22" TextWrapping="Wrap" VerticalAlignment="Top" Width="35" Canvas.Left="211" Canvas.Top="204" Text="15" RenderTransformOrigin="0.414,1.783" FontSize="15" />
        <Label Content="(14 &lt; Breite &lt; 26)" Canvas.Left="251" Canvas.Top="200" Width="131" FontSize="15"/>
    </Canvas>
</Window>
